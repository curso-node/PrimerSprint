{{>header}}
<table class="table table-bordered">
	<thead>
    <tr>
      <th scope="col">Usuario</th>
      <th scope="col" colspan="3">Identidad</th>
    </tr>
  </thead>
{{#each lista}}
<tbody>
    <tr>
      <td>{{this.nombre}}</td>
      <td>{{this.identidad}}</td>
      <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target='#{{this.identidad}}'>Mas informaci√≥n</button></td>
      <td>
      <button type="button" class="btn btn-danger" data-toggle="modal" data-target='#modal2'>Actualizar datos</button> 
      </td>
    </tr>
</tbody>
<div class="modal fade" id='{{this.identidad}}' tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel"><b>{{this.nombre}}</b></h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                <b><p>Identidad: <span>{{this.identidad}}</span></p></b>
                                <b><p>Correo: <span>{{this.correo}}</span></p></b>
                                <b><p>Telefono : <span>{{this.telefono}}</span></p></b>
                                <b><p>Rol : <span>{{this.rol}}</span></p></b>
                              </div>
                              <div class="modal-footer">
                              <td>                               
                              </div>
                            </div>
                          </div>
                      </div>

<div class="modal fade" id='modal2' tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">{{this.nombre}}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <form action="/actualizar" method="post">
                              <div class="modal-body .form-group">

                              	<div class="form-group">
                              	<b><label>Nombre</label></b>
                                <input type="text" name="nombre" value="{{this.nombre}}">
                                </div>
                                <div class="form-group">
                              	<b><label>Identidad</label></b>
                                <input type="text" name="identidad" value="{{this.identidad}}">
                                </div>
                                <div class="form-group">
                                <b><label>Correo</label></b>
                                <input type="text" name="correo" value="{{this.correo}}">
                                </div>
                                <div class="form-group">
                                <b><label>Telefono</label></b>
                                <input type="text" name="telefono" value="{{this.telefono}}">
                                </div>
                                <div class="form-group">                                
                                <b><label>Rol</label></b>
                                	<select name="rol">
										<option>coordinador</option>
										<option>usuario</option>
										<option>docente</option>
									</select>
                                </div>
                              </div>
                              <div class="modal-footer">
                              	<input type="hidden" name="id" value="{{this.identidad}}">
                              	<input type="submit" name="actu" value="Actualizar" class="btn btn-success">
                              <td>  
                              </td>                          
                              </div>
                              </form>
                            </div>

                          </div>
                      </div>

{{/each}}
</table>
{{>footer}}