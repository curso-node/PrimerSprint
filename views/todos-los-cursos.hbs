{{>header}}

<section id="cursosAbiertos" class="container-fluid text-center">
  <ul class="row">
      {{#each listadoCursos}}
        {{#cursoDisponible this.estado value="disponible"}}
      <li class="col-md-3">
        <div class="informacionCurso">
          <figcaption>
              <figure>
                  <img src="/img/programas/IconoBase.png">
              </figure>
            </figcaption>
            <div>
              <h3>{{this.nombre}}</h3>
              <p>Costo: <span>${{this.costo}}</span></p>
              <p> Modalidad: <span>{{this.modalidad}}</span></p>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target='#{{this.id}}'>Mas información</button>
              <div class="modal fade" id='{{this.id}}' tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">{{this.nombre}}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <p>Costo: <span>${{this.costo}}</span></p>
                            <p>Modalidad: <span>{{this.modalidad}}</span></p>
                            <p>Duración : <span>{{this.duracion}}</span></p>
                            <div> 
                              <h4>Descripción:</h4>                            
                              <p>{{this.descripcion}}</p>
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          </div>
                        </div>
                      </div>
                    </div>
            </div>
        </div>
      </li>  
      {{/cursoDisponible}}
    {{/each}}
  </ul>
</section>


{{>footer}}